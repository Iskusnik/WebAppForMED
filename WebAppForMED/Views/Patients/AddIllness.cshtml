@model WebAppForMED.Models.Patient




@using (Html.BeginForm())
{
        @Html.AntiForgeryToken()

        <input type="hidden" value="@ViewBag.patientId" name="patientId" />

        <div class="form-group">
            @Html.Label("id", "Болезнь", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id", (SelectList)ViewBag.IllnessSet, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
   
}