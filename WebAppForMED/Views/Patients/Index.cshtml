@using GridMvc.Html
<div style="width:500px;">
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Id).Titled("ID").Filterable(true).Sortable(true);
    columns.Add(c => c.FIO).Titled("ФИО").Filterable(true).Sortable(true);
    columns.Add(c => c.Pol).Titled("Пол").Filterable(true).Sortable(true);
    columns.Add(c => c.BirthDate).Format("{0:dd/MM/yyyy}").Titled("Дата рождения").Filterable(true).Sortable(true);
    columns.Add(c => c.Blood).Titled("Группа крови").Filterable(true).Sortable(true);
    columns.Add(c => c.DocType).Titled("Тип документа").Filterable(true).Sortable(true);
    columns.Add(c => c.DocNum).Titled("Номер").Filterable(true).Sortable(true);
    columns.Add()
            .Titled("")
            .SetWidth(10)
            .Filterable(true)
            .Sanitized(false)
            .Encoded(false)
            .RenderValueAs(c => Html.ActionLink("Редактировать", "Edit", new { id = c.Id })
            .ToHtmlString());

    columns.Add()
            .Titled("")
            .SetWidth(10)
            .Filterable(true)
            .Sanitized(false)
            .Encoded(false)
            .RenderValueAs(c => Html.ActionLink("Детали", "Details", new { id = c.Id })
            .ToHtmlString());

    columns.Add()
            .Titled("")
            .SetWidth(10)
            .Filterable(true)
            .Sanitized(false)
            .Encoded(false)
            .RenderValueAs(c => Html.ActionLink("Удалить", "Delete", new { id = c.Id })
            .ToHtmlString());
}).WithPaging(10).Sortable(true)
</div>
