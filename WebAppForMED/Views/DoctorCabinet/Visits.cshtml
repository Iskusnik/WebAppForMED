
@{
    ViewBag.Title = "Visits";
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}

<h2>Записи пациентов на приём</h2>

@using GridMvc.Html
<div style="width:500px;">
    @Html.Grid((IEnumerable<WebAppForMED.Models.WorkTime>)ViewBag.Visits).Columns(columns =>
{
    columns.Add(c => c.Patient.FIO).Titled("ФИО Пациента").Filterable(true).Sortable(true);
    columns.Add(c => c.StartTime).Titled("Время приёма").Filterable(true).Sortable(true);
    
}).WithPaging(10).Sortable(true)
