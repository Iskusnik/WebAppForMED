@model IEnumerable<WebAppForMED.Models.Illness>

@{
    ViewBag.Title = "Список";
}

<h2>Список</h2>

<p>
    @Html.ActionLink("Создать новую", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Редактировать", new { id=item.Id }) |
            @Html.ActionLink("Details", "Детали", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Удалить", new { id=item.Id })
        </td>
    </tr>
}

</table>
