@model IEnumerable<WebAppForMED.Models.FreeTime>

@{
    ViewBag.Title = "Свободное время";
}

<h2>Время свободное для записи к врачу</h2>

@using GridMvc.Html
<div style="width:500px;">
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.Id).Titled("ID").Filterable(true).Sortable(true);
    columns.Add(c => c.Doctor.FIO).Titled("ФИО врача").Filterable(true).Sortable(true);
    columns.Add(c => c.StartTime).Titled("Время приёма").Filterable(true).Sortable(true);
    columns.Add()
            .Titled("")
            .SetWidth(10)
            .Filterable(true)
            .Sanitized(false)
            .Encoded(false)
            .RenderValueAs(c => Html.ActionLink("Редактировать", "Edit", new { id = c.Id })
            .ToHtmlString());
    
    columns.Add()
            .Titled("")
            .SetWidth(10)
            .Filterable(true)
            .Sanitized(false)
            .Encoded(false)
            .RenderValueAs(c => Html.ActionLink("Удалить", "Delete", new { id = c.Id })
            .ToHtmlString());
}).WithPaging(10).Sortable(true)
</div>
